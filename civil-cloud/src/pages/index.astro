            { icon: 'battery-charging', text: '9 Baterías <strong>TROJAN Nuevas</strong> (8V)', color: 'text-green-600' },
            { icon: 'hotel', text: 'Ideal para Hotelería, Catering y Campus', color: 'text-gray-500' }
