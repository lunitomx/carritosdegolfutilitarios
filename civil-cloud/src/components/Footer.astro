---
import { siteConfig } from '../config/site';
---

<footer class="bg-gray-900">
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div class="md:flex md:justify-between">
            <div class="mb-6 md:mb-0">
                <a href="/" class="text-2xl font-bold tracking-tight text-white">
                    CUSHMAN<span class="text-blue-500">UTILITARIOS</span>
                </a>
                <p class="mt-2 text-sm text-gray-400 max-w-xs">{siteConfig.description}</p>
            </div>
            <div class="grid grid-cols-2 gap-8 sm:gap-6 sm:grid-cols-3">
                <div>
                    <h2 class="mb-4 text-sm font-semibold text-gray-200 uppercase">Navegación</h2>
                    <ul class="text-gray-400 space-y-3">
                        <li><a href="/#modelos" class="hover:text-blue-400">Modelos</a></li>
                        <li><a href="/#galeria" class="hover:text-blue-400">Galería</a></li>
                        <li><a href="/#beneficios" class="hover:text-blue-400">Ventajas</a></li>
                        <li><a href="/blog" class="hover:text-blue-400">Blog</a></li>
                    </ul>
                </div>
                <div>
                    <h2 class="mb-4 text-sm font-semibold text-gray-200 uppercase">Modelos</h2>
                    <ul class="text-gray-400 space-y-3">
                        <li><a href="/productos/hauler-pro-aluminium-bed-box-negro" class="hover:text-blue-400">Hauler PRO Negro</a></li>
                        <li><a href="/productos/hauler-pro-aluminium-bed-box-blanco" class="hover:text-blue-400">Hauler PRO Blanco</a></li>
                        <li><a href="/productos/hauler-pro-food-service-vanbox" class="hover:text-blue-400">Hauler PRO VanBox</a></li>
                    </ul>
                </div>
                <div>
                    <h2 class="mb-4 text-sm font-semibold text-gray-200 uppercase">Contacto</h2>
                    <ul class="text-gray-400 space-y-3">
                        <li><a href={`mailto:${siteConfig.contact.email}`} class="hover:text-blue-400">{siteConfig.contact.email}</a></li>
                        <li><a href={`tel:${siteConfig.contact.phone}`} class="hover:text-blue-400">{siteConfig.contact.phone}</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <hr class="my-6 border-gray-700 sm:mx-auto lg:my-8" />
        <div class="text-center text-sm text-gray-500">
            &copy; {new Date().getFullYear()} {siteConfig.name}. Todos los derechos reservados.
        </div>
    </div>
</footer>
