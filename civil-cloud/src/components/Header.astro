<header class="sticky top-0 bg-white/80 backdrop-blur-lg z-50 border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
            <a href="/" class="text-2xl font-bold tracking-tight text-gray-900">
                CUSHMAN<span class="text-blue-600">UTILITARIOS</span>
            </a>
            <nav class="hidden md:flex items-center space-x-8">
                <div class="relative group">
                    <button class="font-medium text-gray-600 hover:text-blue-600 transition-colors flex items-center gap-1">
                        Modelos
                        <i data-lucide="chevron-down" class="w-4 h-4"></i>
                    </button>
                    <div class="absolute top-full left-0 mt-2 w-72 bg-white rounded-lg shadow-xl border border-gray-100 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                        <a href="/productos/hauler-pro-negro" class="block px-4 py-3 hover:bg-gray-50 transition-colors border-b border-gray-100">
                            <div class="font-semibold text-gray-900">HAULER PRO Negro</div>
                            <div class="text-sm text-gray-500">Batea de Aluminio Eléctrica</div>
                        </a>
                        <a href="/productos/hauler-pro-aluminium-bed-box" class="block px-4 py-3 hover:bg-gray-50 transition-colors border-b border-gray-100">
                            <div class="font-semibold text-gray-900">HAULER PRO Aluminium Bed BOX</div>
                            <div class="text-sm text-gray-500">Batea Eléctrica - Blanco</div>
                        </a>
                        <a href="/productos/hauler-pro-food-service" class="block px-4 py-3 hover:bg-gray-50 transition-colors">
                            <div class="font-semibold text-gray-900">HAULER PRO Food Service</div>
                            <div class="text-sm text-gray-500">VanBox - Caja Seca Eléctrico</div>
                        </a>
                    </div>
                </div>
                <a href="/#galeria" class="font-medium text-gray-600 hover:text-blue-600 transition-colors">Galería</a>
                <a href="/#beneficios" class="font-medium text-gray-600 hover:text-blue-600 transition-colors">Ventajas</a>
                <a href="/blog" class="font-medium text-gray-600 hover:text-blue-600 transition-colors">Blog</a>
            </nav>
            <a href="/#contacto" class="hidden md:inline-block bg-blue-600 text-white px-5 py-2.5 rounded-lg text-sm font-semibold hover:bg-blue-700 transition-all shadow-lg shadow-blue-600/20">
                Contactar
            </a>
            <button id="mobile-menu-btn" class="md:hidden text-gray-600">
                <i data-lucide="menu"></i>
            </button>
        </div>
    </div>
    <div id="mobile-menu" class="hidden md:hidden bg-white px-4 pb-4 space-y-2 border-b border-gray-200">
        <div>
            <button id="mobile-modelos-btn" class="w-full flex items-center justify-between py-2 font-medium text-gray-600 hover:text-blue-600 transition-colors">
                Modelos
                <i data-lucide="chevron-down" class="w-4 h-4"></i>
            </button>
            <div id="mobile-modelos-dropdown" class="hidden pl-4 space-y-1 mt-1">
                <a href="/productos/hauler-pro-negro" class="block py-2 text-sm text-gray-600 hover:text-blue-600">HAULER PRO Negro</a>
                <a href="/productos/hauler-pro-aluminium-bed-box" class="block py-2 text-sm text-gray-600 hover:text-blue-600">HAULER PRO Aluminium Bed BOX</a>
                <a href="/productos/hauler-pro-food-service" class="block py-2 text-sm text-gray-600 hover:text-blue-600">HAULER PRO Food Service</a>
            </div>
        </div>
        <a href="/#galeria" class="block py-2 font-medium text-gray-600 hover:text-blue-600 transition-colors">Galería</a>
        <a href="/#beneficios" class="block py-2 font-medium text-gray-600 hover:text-blue-600 transition-colors">Ventajas</a>
        <a href="/blog" class="block py-2 font-medium text-gray-600 hover:text-blue-600 transition-colors">Blog</a>
        <a href="/#contacto" class="block mt-2 bg-blue-600 text-white px-5 py-2.5 rounded-lg text-sm font-semibold hover:bg-blue-700 transition-all text-center">Contactar</a>
    </div>
</header>

<script>
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileModelosBtn = document.getElementById('mobile-modelos-btn');
    const mobileModelosDropdown = document.getElementById('mobile-modelos-dropdown');

    mobileMenuBtn?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
    });

    mobileModelosBtn?.addEventListener('click', () => {
        mobileModelosDropdown?.classList.toggle('hidden');
    });
</script>
